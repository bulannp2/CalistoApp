<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityOrder"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukan data pesanan."
        android:fontFamily="@font/baloo"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/brown"/>


    <EditText
        android:id="@+id/insertProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:hint="Nama Produk"
        android:inputType="text"
        android:textColorHint="@color/brown"
        android:textColor="@color/brown"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/insertJumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Jumlah"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:textColorHint="@color/brown"
        android:textColor="@color/brown"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/insertSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Size"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:textColorHint="@color/brown"
        android:textColor="@color/brown"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/insertAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Alamat Lengkap"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:textColorHint="@color/brown"
        android:textColor="@color/brown"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/insertEks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="JNE / JNT / Tiki / SiCepat"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:textColorHint="@color/brown"
        android:textColor="@color/brown"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/insertBayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Metode Pembayaran"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:textColorHint="@color/brown"
        android:textColor="@color/brown"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnCheckout"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/brown"
        android:fontFamily="@font/baloo"
        android:text="Checkout"
        android:textColor="@color/white"
        android:textSize="20sp"/>


</LinearLayout>