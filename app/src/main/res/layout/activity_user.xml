<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityUser"
    android:background="@drawable/bg"
    android:gravity="bottom"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/judul_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calisto."
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/baloo"
        android:textColor="@color/brown"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/logo"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT US"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/brown"/>

        <TextView
            android:id="@+id/CP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnOrder"
            android:layout_marginTop="40sp"
            android:gravity="center_horizontal"
            android:text="CP : 087856995685 "
            android:textColor="@color/brown"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo"
            android:text="Address : Jalan Semebaung, Gianyar"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ekspe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alamat"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo"
            android:text="Shipping : JNE / JNT / Tiki / SiCepat"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/sopi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopee : calisto"
            android:layout_below="@id/ekspe"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/bayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembayaran : BNI/BCA/COD"
            android:layout_below="@id/sopi"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_below="@id/sopi"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="69dp"
            android:backgroundTint="@color/brown"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Order now"
            android:textSize="20sp"
            android:textColor="@color/white"/>

    </RelativeLayout>



</LinearLayout>